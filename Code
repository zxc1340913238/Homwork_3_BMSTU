\section*{Задача 1}
\[f(x)=x\arccos{x}-\sqrt{1-x^2},\quad n=3\]
\begin{equation*}
\begin{aligned}
&f(0)=0-1=-1.\\
&f'(x)=\arccos{x},\quad f'(0)=\arccos{0}=0 \\
&f''(x)=-\dfrac{1}{\sqrt{1-x^2}} ,\quad f''(0)=-\dfrac{1}{\sqrt{1-x^2}}=-1\\
&f^{(3)}(x)=-\dfrac{x}{\sqrt{1-x^2}(1-x^2)},\quad f^{(3)}(0)=-\frac{0}{\sqrt{1-0}(1-0)}=0\\
\end{aligned}
\end{equation*}
\[f(x)=-1+0-\frac{x^2}{2}+0+\circ (x^3)=-1-\frac{x^2}{2}+\circ(x^3)\]
